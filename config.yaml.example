# PubMed 文章推送工具配置

# LLM 配置（支持 OpenAI API 格式）
llm:
  base_url: "https://api.openai.com/v1"  # API 基础地址（示例：OpenAI 官方）
  api_key: "sk-your-api-key-here"           # API 密钥（请替换为你的真实密钥）
  model: "claude-haiku-4-5-20251001"                         # 模型名称（如 gpt-4, gpt-3.5-turbo）

# PubMed 搜索配置
pubmed:
  search_days: 7          # 搜索最近 N 天的文章（1-365）
  max_results: 100        # 每次最多获取的文献数量（最大 100）
  # schedule: "0 9 * * *" # 定时任务 Cron 表达式（可选，注释掉则禁用定时任务）
                          # 示例："0 9 * * *" = 每天上午9点
                          #       "0 */6 * * *" = 每6小时
                          #       "0 9 * * 1" = 每周一上午9点

# 兴趣主题列表（支持自然语言描述，LLM 会自动转换为检索式）
interests:
  - "人工智能在医学影像诊断中的应用"
  - "COVID-19 疫苗的长期免疫效果研究"
  - "机器学习在药物发现中的应用"
  # 添加更多兴趣主题...
